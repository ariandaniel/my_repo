<!DOCTYPE html><html><head>
<title>Calculator</title><meta charset="utf-8">
<script type="text/javascript">
function cube() {
  var num = document.getElementById("n1");
  num.value = Math.pow(num.value, 3);
}
function cuarto() {
  var num1 = document.getElementById("n1");
  num1.value = Math.pow(num1.value, 4);
}
function sen() {
  var num2 = document.getElementById("n1");
  num2.value = Math.sin(num2.value);
}
</script>
</head>
<body>
  Number:
  <input type="text" id="n1"><p>
  <button onclick="cube()"> x^3 </button>
<button onclick="cuarto()"> x^4 </button>
<button onclick="sen()"> sen </button>
</body>
</html>
